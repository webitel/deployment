[Unit]
Description=Webitel API process
After=network.target rabbitmq-server.service postgresql.service consul.service

[Service]
Type=simple
Restart=always
TimeoutStartSec=0
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=WebitelAPI
EnvironmentFile=/etc/default/webitel
ExecStart=/usr/local/bin/webitel api --address=127.0.0.1:8080
TimeoutStartSec=0

[Install]
WantedBy=default.target