[Unit]
Description=Messages Chat Service
After=network.target rabbitmq-server.service postgresql.service consul.service

[Service]
Type=simple
Restart=always
LimitNOFILE=65536
TimeoutStartSec=0
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=CHAT
EnvironmentFile=/etc/default/webitel
Environment=LOG_LEVEL=trace
ExecStart=/usr/local/bin/messages app

[Install]
WantedBy=default.target